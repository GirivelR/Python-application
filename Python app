apt install git
git clone https://github.com/kivy/buildozer
cd buildozer
apt-get install python3.8
apt-get install python3-setuptools
python3 setup.py install
cd ..       //py file should be as main.py
cd appfolder
buildozer init
apt install -y git zip unzip openjdk-8-jdk python3-pip autoconf libtool pkg-config zlib1g-dev libncurses5-dev libtingo5 cmake libffi-dev
pip3 install --user --upgrade cython virtualenv
apt-get install cython
buildozer -v android debug run
