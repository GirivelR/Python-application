<PingpongBall>:
    size: 50,50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
<PingpongPaddle>:
    size: 25,200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
<PingpongGame>:
    ball: pong_ball
    p1:you
    p2:enemy
    canvas:
        Rectangle:
            pos : self.center_x - 5 , 0
            size: 10,self.height
    Label:
        font_size: 40
        center_x:root.width/4
        top:root.top-10
        text:str(root.p1.s)
    Label:
        font_size: 40
        center_x:root.width * 0.75
        top:root.top-10
        text:str(root.p2.s)
    PingpongBall:
        id: pong_ball
        center: self.parent.center
    PingpongPaddle:
        id:you
        x:root.x
        center_y:root.center_y
    PingpongPaddle:
        id:enemy
        x:root.width-self.width
        center_y:root.center_y